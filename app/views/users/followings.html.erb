<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
   
    <% if @followings.any? %>
      <h3>followings (<%= @followings.count %>)</h3>
      <ol class="followings">
        <% @followings.each do |followings| %>
        <%= render partial: 'users/followings', locals: { followings: followings } %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>